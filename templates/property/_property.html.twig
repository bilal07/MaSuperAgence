
<div class="card mb-4">
    <div class="card-body">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="card-img-top" style="width:100%;height:auto;" >
        {% else %}
        <img src="/images/properties/empty.jpg" alt="card-img-top" style="width:100%;height:auto;" >
    {% endif %}
        <h5 class="card-title">
                <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>       
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})
        <div class="text-primary" style="font-weight:bold; font-size: 2 rem">{{ property.formattedPrice}} €</div>
    </div>
</div>
               